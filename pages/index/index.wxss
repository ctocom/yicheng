/* 搜索框组件 */
@import "components/search/search.wxss";

/* banner组件 */
@import "components/banner/banner.wxss";

/* 猜您喜欢 */

.title-hrbg {
  position: relative;
  z-index: 1;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  color: #888;
  text-align: center;
  margin-top: 30rpx;
}

.title-hrbg .cont {
  background: #f7f7f7;
  padding: 1rem 0.6rem;
  font-size: 28rpx;
  z-index: 10;
}

.title-hrbg .cont .icon-huo {
  padding-right: 10rpx;
}

.title-hrbg .hr {
  background: #ddd;
  height: 1rpx;
  border: 0;
  position: absolute;
  left: 10%;
  right: 10%;
  top: 50%;
  margin-top: 1px;
  z-index: -1;
}
.index_sale {
  background: #fff;
  padding: 0 12px 12px 12px;
}
.index_sale .page-column {
  width: 750rpx;
  /* padding: 0 11rpx 11rpx 0; */
}
.index_sale .sale_img{
  border: 1rpx solid #f2f2f2;
  border-radius: 4px;
  overflow: hidden;
  width: 100%;
  height: 270rpx;
}
.index_sale .sale_img image {
  width: 100%;
  height: 100%;
}
.index_sale .content {
  width: 170rpx;
}
.index_sale .content text {
  font-size: 40rpx;
  margin-top: 25rpx;
  /* font-size: 26rpx;*/
  margin: 5rpx 10rpx;
  width: 100%; 
}
.index_sale .price {
  font-size: 50rpx;
  margin-top: 30rpx;
  /*  display: block; */
}
.order-number {
  width: 40%;
  background-color: red;
  color: #fff;
  text-align: center;
  line-height: 35px;
  border-radius: 100rpx;
  float:right ;
  margin-right: 57rpx;
}

.order-number button {
  background: none;
  padding: 0;
  font-size: 34rpx;
  color: #fff;
  line-height: inherit;
  border-radius: 0;
  border: 0;
}

.order-number button::after {
  content: " ";
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  left: 0;
  border: none;
  transform: scale(0);
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 0;
}